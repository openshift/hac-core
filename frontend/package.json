{
  "name": "hac-core",
  "version": "1.1.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "src/poc-code/console-dynamic-plugin-sdk",
    "src/poc-code/console-plugin-sdk"
  ],
  "scripts": {
    "analyze": "NODE_ENV=production webpack --config config/prod.webpack.config.js --env analyze=true",
    "build": "yarn build-sdk && NODE_ENV=production webpack --config config/prod.webpack.config.js",
    "deploy": "yarn build && yarn lint && yarn test",
    "lint": "yarn lint:ts && yarn lint:sass",
    "lint:ts": "eslint . --ext .js,.jsx,.ts,.tsx --color",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:sass": "stylelint 'src/**/*.scss' --config .stylelintrc.json",
    "nightly": "yarn deploy",
    "dev": "yarn start:proxy:beta",
    "start": "webpack serve --config config/dev.webpack.config.js",
    "start:k8s": "ENVIRONMENT=prod BETA=true PROXY=true yarn start",
    "start:proxy": "yarn build-sdk && PROXY=true BETA=true webpack serve --config config/dev.webpack.config.js",
    "start:proxy:beta": "yarn build-sdk && PROXY=true BETA=true webpack serve --config config/dev.webpack.config.js",
    "start:beta": "BETA=true npm start",
    "start:standalone": "STANDALONE=true npm start",
    "build-sdk": "yarn --cwd src/poc-code/console-dynamic-plugin-sdk build",
    "test": "exit 0",
    "verify": "yarn build && yarn lint && yarn test"
  },
  "dependencies": {
    "@openshift/dynamic-plugin-sdk": "^1.0.0-alpha5",
    "@openshift/dynamic-plugin-sdk-utils": "^1.0.0-alpha8",
    "@patternfly/patternfly": "^4.135.2",
    "@patternfly/quickstarts": "^1.3.0",
    "@patternfly/react-catalog-view-extension": "^4.12.74",
    "@patternfly/react-core": "^4.135.0",
    "@patternfly/react-table": "^4.37.8",
    "@redhat-cloud-services/frontend-components": "^3.3.3",
    "@redhat-cloud-services/frontend-components-notifications": "^3.2.2",
    "@redhat-cloud-services/frontend-components-utilities": "^3.2.4",
    "ajv": "^6.12.6",
    "chalk": "^2.4.2",
    "classnames": "^2.3.1",
    "comment-json": "^4.1.1",
    "copy-webpack-plugin": "^10.2.0",
    "find-up": "^4.1.0",
    "lodash-es": "^4.17.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.14.2",
    "react-redux": "7.2.6",
    "react-router": "^5.2.0",
    "react-router-dom": "5.2.0",
    "read-pkg": "^5.2.0",
    "redux": "4.1.0",
    "redux-logger": "3.0.6",
    "redux-promise-middleware": "6.1.2",
    "redux-thunk": "^2.4.1",
    "semver": "^6.3.0",
    "webpack-virtual-modules": "^0.4.3"
  },
  "devDependencies": {
    "@redhat-cloud-services/eslint-config-redhat-cloud-services": "^1.2.1",
    "@redhat-cloud-services/frontend-components-config": "^4.5.4",
    "@scalprum/core": "^0.0.12",
    "@types/classnames": "^2.3.1",
    "@types/jest": "21.x",
    "@types/react-redux": "7.x",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
    "enzyme": "3.11.0",
    "enzyme-to-json": "3.6.2",
    "eslint": "7.29.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.0.5",
    "prop-types": "15.7.2",
    "stylelint": "13.13.1",
    "stylelint-config-recommended-scss": "4.2.0",
    "stylelint-scss": "3.19.0",
    "ts-node": "5.x",
    "typesafe-actions": "^5.1.0",
    "typescript": "4.4.4",
    "webpack-bundle-analyzer": "4.4.2"
  },
  "insights": {
    "appname": "hac-core",
    "buildrepo": "git@github.com:RedHatInsights/hac-core-frontend-build.git"
  }
}
